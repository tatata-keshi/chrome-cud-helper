{
  "manifest_version": 3,
  "name": "Element Color Picker and Filters",
  "version": "1.1",
  "description": "Click on an element to get its color and apply SVG filters.",
  "permissions": ["activeTab", "scripting", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
